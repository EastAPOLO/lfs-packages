pkgbuild_version=5
pkgname=glib
pkgver=2.52.3
cores=$(($(nproc)+1))

dependencies=(
	"!$pkgname"
	'libffi'
	'Python<=3'
	'pcre'
)
sources=(
	"http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.53/${pkgname}-${pkgver}.tar.xz"
)
sha1sums=(
	'6504d149e25a31985e6e461d65b52586596829f8'
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"

	./configure --prefix=/usr --with-pcre=system
}

lfs_me_build() {
        cd "${build_dir}/${pkgname}-${pkgver}"
        make -j$cores
}

lfs_me_install() {
        cd "${build_dir}/${pkgname}-${pkgver}"
        make DESTDIR="$fakeroot_dir" install
}


lfs_me_check() {
	return
}

